<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FeedbackDiscipline.Pagini.Conectare"
             BackgroundColor="#272f54"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Padding="40,0,40,30">
            <Image Source="logoUSV.png" WidthRequest="100" HeightRequest="100"></Image>
            <Entry x:Name="campEmail" Placeholder="Email" VerticalOptions="Center" TextColor="White" PlaceholderColor="Gray"></Entry>
            <Entry x:Name="campParola" Placeholder="Parola" VerticalOptions="Center" TextColor="White" PlaceholderColor="Gray" IsPassword="True"></Entry>
            <Button WidthRequest="100" HeightRequest="50" VerticalOptions="Center" Text="Conectare" BackgroundColor="#87C2EB" TextColor="Black" Clicked="ConectareUtilizator"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>